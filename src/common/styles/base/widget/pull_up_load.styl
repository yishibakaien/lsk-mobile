.cbui-loading-zone {
    display: none;
    height: 30px;
    color: #999;
    text-align: center;
    line-height: 20px;
    padding: 10px 0;
}
.load-more{
    display: none;
}
.loading-tip {
    display: none;
}
.no-more {
    display: none;
}
.loading-icon {
  display: inline-block;
  width: 20px;
  height: 20px;
  vertical-align: top;
  -webkit-animation: loadingRotate 1s steps(12,end) infinite;
  animation: loadingRotate 1s steps(12,end) infinite;
  background: transparent url('data:image/svg+xml;base64,') no-repeat;background-size: 100%
}
.loading-text {
    display: inline-block;
    height: 20px;
    line-height: 20px;
    
    vertical-align: top;
}
.no-more .caret {
    display: inline-block;
    position: relative;
    
    height: 20px;
    line-height: 20px;
    width: 30px;
    
    bottom: 5px;

    // border-bottom: 1px solid #ccc;
}
.no-more .caret:after {
    content: ' ';
    position: absolute;
    height: 1px;
    left: 0;
    right: 0;
    bottom: 0;
    border-bottom 1px solid #ccc;
    transform: sacleY(.5);
    transform-origin: 0 100%;
}

@keyframes loadingRotate {
  0% {
    transform: rotate3d(0, 0, 1, 0deg)
  }

  100% {
    transform: rotate3d(0, 0, 1, 360deg)
  }
}

@-webkit-keyframes loadingRotate {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg)
  }

  100% {
    -webkit-transform: rotate3d(0,0,1,360deg)
  }
}